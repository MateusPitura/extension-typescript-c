{
  "name": "c-compile-run",
  "displayName": "C - Compile & Run",
  "description": "Compile and Run C",
  "version": "0.1.1",
  "publisher": "MateusPitura",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/MateusPitura/extension-typescript-c"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:c"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cCompileRunButton.compileRun",
        "title": "Compile & Run C"
      },
      {
        "command": "cCompileRunButton.justCompile",
        "title": "Compile C"
      },
      {
        "command": "cCompileRunButton.insertCommand",
        "title": "Insert Command"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
